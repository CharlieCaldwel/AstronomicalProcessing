<Window x:Class="AstronomicalProcessing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AstronomicalProcessing"
        mc:Ignorable="d"
        Title="Astronomical Processing" Height="450" Width="600" ResizeMode="CanMinimize">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Image.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,43">
            <TextBox x:Name="SearchBox" HorizontalAlignment="Center" Height="30" Width="230" Margin="-40,31,10,10" FontSize="15" FontWeight="Bold"/>
            <Button x:Name="SearchBtn" Content="Enter" Width="50" Height="30" HorizontalAlignment="Right" Margin="0,-50,11,0" Click="BtnSearch_Click"/>

            <TextBox x:Name="InputBox" HorizontalAlignment="Center" Height="30" Width="230" Margin="-40,20,10,10" FontSize="15" FontWeight="Bold"/>
            <Button x:Name="InputBtn" Content="Enter" Width="50" Height="30" HorizontalAlignment="Right" Margin="0,-50,11,0" Click="BtnInput_Click"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="5,0,0,0" >
            <Button x:Name="SortBtn" Content="Sort" Width="140" Height="25" Click="BtnSort_Click"/>
            <Button x:Name="RandomBtn" Content="Random" Width="140" Height="25" Click="BtnRandClick_Click"/>
        </StackPanel>

        <TextBlock Text="Search:" Margin="10,11,10,132" FontSize="15" Foreground="White"/>
        <TextBlock Text="Input:" Margin="10,71" FontSize="15" Foreground="White"/>
        <TextBlock Text="List Of Data:" HorizontalAlignment="Center" Margin="25,11" FontSize="15" Grid.Column="1" Foreground="White"/>
        <TextBlock x:Name="StatusTxt" Text="Status: " Grid.Column="0" FontSize="15"  Background="White" Grid.Row="2" HorizontalAlignment="Center" Width="300" Height="25" Margin="0,148,-20,0"/>
        <ListBox x:Name="AstroDataLBX" Margin="10,30,10,10" Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" Width="250" Height="353"/>

    </Grid>
</Window>
