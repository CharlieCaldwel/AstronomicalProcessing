<Window x:Class="Testing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Testing"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Grid>
        <Rectangle x:Name="ARectangle" Width="200" Height="200" Fill="BlanchedAlmond" HorizontalAlignment="Center" />
        <Button x:Name="Start" Content="Start" Width="50" Height="50" VerticalAlignment="Bottom" HorizontalAlignment="Center" Click="btnClick_Click"/>
        <Grid.Resources>
            <Storyboard x:Key="WidthAnimationStoryboard">
                <DoubleAnimation Storyboard.TargetName="ARectangle"
                                 Storyboard.TargetProperty="Width"
                                 From="200" To="100" Duration="0:0:3" />
            </Storyboard>
        </Grid.Resources>
    </Grid>
</Window>
